<Window x:Class="Setup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Agreement" Height="500" Width="620" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" Background="#FFEBEBEB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RichTextBox Name="LicenseTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsReadOnly="True" Loaded="LicenseTextBox_Loaded" VerticalScrollBarVisibility="Auto" />
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="I Decline" Margin="10" Width="75" Height="23" Click="DeclineButton_Click" />
            <Button Content="I Agree" Margin="10" Width="75" Height="23" Click="AgreeButton_Click" />
        </StackPanel>
    </Grid>
</Window>
