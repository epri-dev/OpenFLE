<Window x:Class="openFLEManager.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LicenseWindow" Height="500" Width="620" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <RichTextBox Name="LicenseTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsReadOnly="True" Loaded="LicenseTextBox_Loaded" VerticalScrollBarVisibility="Auto" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="70" HorizontalAlignment="Right" Margin="10" Content="Accept" Click="AcceptButton_Click" />
            <Button Width="70" HorizontalAlignment="Right" Margin="10" Content="Close" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
